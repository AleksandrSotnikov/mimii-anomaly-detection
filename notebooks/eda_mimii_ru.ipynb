# EDA and Visualization MIMII

import os
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import librosa
import librosa.display
import glob
import random

sns.set_style("darkgrid")

DATA_DIR = "../data/"

# Example: EDA for one fan normal vs anomaly
MACHINE = "fan"
MODEL_ID = "00"
DB_LEVEL = "6dB"
FOLDER = f"{DB_LEVEL}_{MACHINE}/id_{MODEL_ID}/"

# Collect filenames
normals = glob.glob(os.path.join(DATA_DIR, FOLDER, "normal*.wav"))
anomalies = glob.glob(os.path.join(DATA_DIR, FOLDER, "anomaly*.wav"))

random.shuffle(normals)
random.shuffle(anomalies)

n_plot = 3
plt.figure(figsize=(14, 2*n_plot))
for i, wavfile in enumerate(normals[:n_plot] + anomalies[:n_plot]):
    y, sr = librosa.load(wavfile, sr=16000)
    plt.subplot(n_plot*2, 1, i+1)
    librosa.display.waveshow(y, sr=sr)
    plt.title(f"{'Normal' if i < n_plot else 'Anomaly'}: " + os.path.basename(wavfile))
plt.tight_layout()
plt.savefig("eda_waveforms.png")
plt.close()

plt.figure(figsize=(12, 5))
y, sr = librosa.load(normals[0], sr=16000)
S = librosa.feature.melspectrogram(y, sr=sr, n_mels=128)
S_dB = librosa.power_to_db(S, ref=np.max)
librosa.display.specshow(S_dB, sr=sr, x_axis='time', y_axis='mel')
plt.colorbar(format='%+2.0f dB')
plt.title("Mel-spectrogram (Normal sample)")
plt.tight_layout()
plt.savefig("eda_mel_normal.png")
plt.close()
